{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es6",
    "module": "commonjs",
    "lib": ["esnext"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "declaration": true,
    "paths": {
      "zombienet": ["./packages/cli"],
      "@zombienet/orchestrator": ["./packages/orchestrator"]
    }
  }
}
